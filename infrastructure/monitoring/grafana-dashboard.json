{
  "dashboard": {
    "id": null,
    "title": "DevOpsPilot - System Overview",
    "tags": ["devopspilot", "monitoring", "system"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"devopspilot-backend\"}",
            "legendFormat": "Backend Health"
          },
          {
            "expr": "up{job=\"devopspilot-ai-engine\"}",
            "legendFormat": "AI Engine Health"
          },
          {
            "expr": "up{job=\"devopspilot-frontend\"}",
            "legendFormat": "Frontend Health"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "CPU Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"devopspilot-backend\"}[5m]) * 100",
            "legendFormat": "Backend CPU %"
          },
          {
            "expr": "rate(process_cpu_seconds_total{job=\"devopspilot-ai-engine\"}[5m]) * 100",
            "legendFormat": "AI Engine CPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"devopspilot-backend\"} / 1024 / 1024",
            "legendFormat": "Backend Memory (MB)"
          },
          {
            "expr": "process_resident_memory_bytes{job=\"devopspilot-ai-engine\"} / 1024 / 1024",
            "legendFormat": "AI Engine Memory (MB)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "unitScale": "MB"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "HTTP Request Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"devopspilot-backend\"}[5m])",
            "legendFormat": "Backend Requests/sec"
          },
          {
            "expr": "rate(http_requests_total{job=\"devopspilot-ai-engine\"}[5m])",
            "legendFormat": "AI Engine Requests/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Response Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"devopspilot-backend\"}[5m])) * 1000",
            "legendFormat": "Backend 95th Percentile (ms)"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"devopspilot-ai-engine\"}[5m])) * 1000",
            "legendFormat": "AI Engine 95th Percentile (ms)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Error Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"devopspilot-backend\", status=~\"5..\"}[5m]) / rate(http_requests_total{job=\"devopspilot-backend\"}[5m]) * 100",
            "legendFormat": "Backend Error %"
          },
          {
            "expr": "rate(http_requests_total{job=\"devopspilot-ai-engine\", status=~\"5..\"}[5m]) / rate(http_requests_total{job=\"devopspilot-ai-engine\"}[5m]) * 100",
            "legendFormat": "AI Engine Error %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Active Connections",
        "type": "timeseries",
        "targets": [
          {
            "expr": "mongodb_connections{job=\"devopspilot-mongodb\"}",
            "legendFormat": "MongoDB Connections"
          },
          {
            "expr": "redis_connected_clients{job=\"devopspilot-redis\"}",
            "legendFormat": "Redis Connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Queue Length",
        "type": "timeseries",
        "targets": [
          {
            "expr": "celery_queue_length{job=\"devopspilot-celery\"}",
            "legendFormat": "Celery Queue Length"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 9,
        "title": "AI Model Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "ai_model_inference_duration_seconds{job=\"devopspilot-ai-engine\"}",
            "legendFormat": "Model Inference Time"
          },
          {
            "expr": "ai_model_accuracy{job=\"devopspilot-ai-engine\"}",
            "legendFormat": "Model Accuracy"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 10,
        "title": "System Load",
        "type": "timeseries",
        "targets": [
          {
            "expr": "node_load1{job=\"devopspilot-node-exporter\"}",
            "legendFormat": "1m Load Average"
          },
          {
            "expr": "node_load5{job=\"devopspilot-node-exporter\"}",
            "legendFormat": "5m Load Average"
          },
          {
            "expr": "node_load15{job=\"devopspilot-node-exporter\"}",
            "legendFormat": "15m Load Average"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      },
      {
        "id": 11,
        "title": "Disk Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "node_filesystem_avail_bytes{job=\"devopspilot-node-exporter\", mountpoint=\"/\"} / node_filesystem_size_bytes{job=\"devopspilot-node-exporter\", mountpoint=\"/\"} * 100",
            "legendFormat": "Root Disk Available %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40}
      },
      {
        "id": 12,
        "title": "Network I/O",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{job=\"devopspilot-node-exporter\"}[5m]) / 1024 / 1024",
            "legendFormat": "Network Receive (MB/s)"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{job=\"devopspilot-node-exporter\"}[5m]) / 1024 / 1024",
            "legendFormat": "Network Transmit (MB/s)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "unitScale": "MB"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "job",
          "type": "query",
          "query": "label_values(up, job)",
          "refresh": 2,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=~\"$job\"}, instance)",
          "refresh": 2,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(up[5m]) > 0",
          "iconColor": "red",
          "titleFormat": "Deployment Change",
          "textFormat": "Service {{ $labels.job }} on {{ $labels.instance }} changed state"
        }
      ]
    },
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1
  }
}
