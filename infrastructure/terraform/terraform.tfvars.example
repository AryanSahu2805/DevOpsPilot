# DevOpsPilot Terraform Variables Example
# Copy this file to terraform.tfvars and modify the values as needed

# Basic Configuration
aws_region   = "us-west-2"
environment  = "dev"
project_name = "devopspilot"

# VPC Configuration
vpc_cidr        = "10.0.0.0/16"
public_subnets  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnets = ["10.0.10.0/24", "10.0.20.0/24", "10.0.30.0/24"]

# EKS Configuration
kubernetes_version = "1.28"
cluster_endpoint_public_access_cidrs = ["0.0.0.0/0"]  # Restrict this in production
cluster_enabled_log_types = ["api", "audit", "authenticator", "controllerManager", "scheduler"]

# EKS Node Group Configuration
node_instance_types = ["t3.medium"]
node_desired_size   = 2
node_max_size       = 4
node_min_size       = 1

# Database Configuration (Optional)
create_rds            = false  # Set to true to create RDS instance
rds_instance_class    = "db.t3.micro"
rds_allocated_storage = 20
rds_database_name     = "devopspilot"
rds_username          = "admin"
rds_password          = "changeme123!"  # Use a secure password

# Cache Configuration (Optional)
create_elasticache   = false  # Set to true to create ElastiCache
elasticache_node_type = "cache.t3.micro"

# Monitoring Configuration
enable_monitoring    = true
log_retention_days   = 7

# Domain Configuration (Optional)
domain_name      = ""  # Your domain name
certificate_arn  = ""  # ACM certificate ARN

# Auto Scaling Configuration
enable_cluster_autoscaler          = true
enable_horizontal_pod_autoscaler   = true

# Security Configuration
enable_pod_security_policy = true
enable_network_policy      = true

# Cost Optimization
enable_spot_instances = false  # Set to true for cost savings
spot_instance_types   = ["t3.medium", "t3.large", "t3a.medium", "t3a.large"]

# Additional Tags
additional_tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Backup      = "true"
}
